<% layout('layouts/boilerplate') %>

    <h1>All Routes</h1>
    <nav>
        <a href="/routes/new">Add a New Route</a>
    </nav>

    <% for(let route of routes){ %>
        <div class="card mb-2">
                <h5 class="card-title">
                    <a href="routes/<%= route._id %>">
                        <%= route.title %>
                    </a>
                    <!-- crag info, NEED UPDATED DATA TO POPULATE CRAG -->
                </h5>
            <div>
                <span class="card-text">Rating: <%= route.rating %></span>
            </div>
        </div>
    <% } %>

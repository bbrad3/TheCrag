<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Create a New Route!</h1>
            <form action="/crags/<%=crag._id%>/routes" method="POST">
                <div class="form-group mb-1">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="route[title]" required>
                </div>
                <div class="form-group mb-1">
                    <label for="rating">Rating</label>
                    <select class="form-control" id="rating" name="route[rating]" required>
                        <% for(let rating of ratings){ %>
                            <option value="<%=rating%>"><%=rating%></option>
                        <% } %>
                    </select>
                </div>
                <fieldset class="form-group mb-1">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0">Style</legend>
                        <div class="col-sm-10">
                            <% for(let style of styles){ %>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="route[style]" id="<%=style.toLowerCase()%>" value="<%=style%>">
                                    <label class="form-check-label" for="<%=style.toLowerCase()%>">
                                        <%=style%>
                                    </label>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </fieldset>
                <div class="form-group row text-center">
                    <div class="col-10 offset-1">
                        <button class="btn btn-success" type="submit">Submit New Route</button>
                    </div>
                </div>
            </form>
            <div class="row text-center">
                <span class="col-10 offset-1"><a href="/crags/<%=crag._id%>">Go Back</a></span>
            </div>
        </div>
    </div>

    